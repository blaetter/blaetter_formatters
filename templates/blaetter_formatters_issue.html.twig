{#
/**
 * @file blaetter_formatters_issue.html.twig
 * Displays a link to an edition with information about the issue
 *
 * Available variables:
 * - book_id:
 * - edition:
 * - year:
 * - issue_prefix
 * - display_pages
 * - page_from
 * - page_to
 * - extra_styles
 *
 * @ingroup themeable
 */
#}
{% set link %}  <a href="{{ path('entity.node.canonical', {'node': book_id}) }}">»Blätter« {{ edition }}/{{ year }}</a>{% endset %}

{% if display_pages and page_from %}
  {% set pages %}, S. {{ page_from }}{% if page_to %}-{{ page_to }}{% endif %} {% endset %}
{% else %}
  {% set pages = '' %}
{% endif %}

<div class="articleinfo {{ extra_styles}}">
    <div>{{ issue_prefix }}{{ link }}{{ pages }}
    </div>
</div>
